{
  "manifest_version": 2,
  "name": "Tidepool conduit extension",
  "version": "0.0.0",
  "description": "Connect diabetes devices to Tidepool",
  
  "author": "Tidepool contributors",

  "short_name": "conduit-chrome-bridge",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "management",
    "*://developer.chrome.com/*",
    "http://localhost:4545/*", "http://localhost/*"
  ],
  "externally_connectable": {
    "ids": [ "*" ],
    "matches": [ "http://localhost/*", "*://developer.chrome.com/*" ]
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://developer.chrome.com/*",
        "http://localhost/*"
      ],
      "js": [
        "jquery.js",
        "content.js"
      ]
    }
  ]

}
